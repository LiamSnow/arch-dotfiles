# Liam's I3 Config

include ~/.config/i3/`uname -n`.conf

# windows
#                       border  bckgnd  text    indicat child border
client.focused          #990099 #000000 #999999 #999999 #990099
client.focused_inactive #990099 #000000 #999999 #999999 #990099
client.urgent           #ff0000 #000000 #ffffff #ffffff #ff0000
client.unfocused        #000000 #000000 #ffffff #ffffff #00000099
client.background #00000000

# fonts
font pango:monospace 8
#font pango:DejaVu Sans Mono 8

# startup apps
set $lock "env XSECURELOCK_SAVER=saver_blank xsecurelock"
exec --no-startup-id xset s 300 5
exec --no-startup-id xss-lock -n /usr/lib/xsecurelock/dimmer -l -- xsecurelock
exec --no-startup-id 1password --silent
# exec_always --no-startup-id autotiling
exec --no-startup-id kitty -e ikhal
exec "/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1"
exec_always --no-startup-id picom  -b --config ~/.config/picom/picom.conf
exec --no-startup-id feh --bg-scale ~/.wallpapers/macos_monterey.jpg
exec --no-startup-id setxkbmap -option caps:ctrl_modifier


no_focus [title="^Peek preview$"]

# const
set $mod Mod4
set $up k
set $down j
set $left h
set $right l

# audio
bindsym XF86AudioRaiseVolume exec --no-startup-id wpctl set-volume @DEFAULT_SINK@ 5%+
bindsym $mod+Home exec --no-startup-id wpctl set-volume @DEFAULT_SINK@ 5%+
bindsym XF86AudioLowerVolume exec --no-startup-id wpctl set-volume @DEFAULT_SINK@ 5%-
bindsym $mod+End exec --no-startup-id wpctl set-volume @DEFAULT_SINK@ 5%-
bindsym XF86AudioMute exec --no-startup-id wpctl set-mute @DEFAULT_SINK@ toggle

# spotify control
bindsym $mod+Prior exec --no-startup-id playerctl --player=spotify previous
bindsym XF86AudioPlay exec --no-startup-id playerctl --player=spotify play-pause
bindsym $mod+equal exec --no-startup-id playerctl --player=spotify play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl --player=spotify next
bindsym $mod+Next exec --no-startup-id playerctl --player=spotify next
bindsym XF86AudioPrev exec --no-startup-id playerctl --player=spotify previous

# emojis
bindsym $mod+semicolon exec --no-startup-id emoji-picker

# screenshot
bindsym $mod+Print exec maim -s ~/Sync/Screenshots/screenshot-$(date +%Y-%m-%d-%H-%M-%S).png

floating_modifier $mod

bindsym $mod+Return exec kitty
bindsym $mod+Shift+Return exec kitty -o background=#060006 ssh liams@risc-iv-monolith
bindsym $mod+apostrophe exec brave
bindsym $mod+s exec spotify-launcher
bindsym $mod+i exec 1password
bindsym $mod+r exec rnote
bindsym $mod+c exec kitty -e zsh -c 'khal interactive'

bindsym $mod+slash exec feh --fullscreen --hide-pointer --borderless ~/.config/wallpapers/macos_gradient.jpg --no-screen-clip --zoom 100

bindsym $mod+Shift+q kill
bindsym $mod+q kill

bindsym Ctrl+Mod1+Delete exec $lock
bindsym $mod+x exec $lock

bindsym $mod+d exec --no-startup-id dmenu_run -nb '#000000' -sb '#222222'

focus_wrapping no
focus_follows_mouse no

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+b split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle

bindsym $mod+space focus mode_toggle

# bindsym $mod+a focus parent
#bindsym $mod+d focus child

# bindsym $mod+Shift+minus move scratchpad
# bindsym $mod+minus scratchpad show

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
# set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
# bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
# bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-msg exit && clear"
